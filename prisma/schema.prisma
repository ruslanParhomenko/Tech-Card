generator client {
  provider = "prisma-client"
  output   = "../app/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model Product {
  id          Int     @id @default(autoincrement())
  name        String
  coefficient String
  unit        String
  category    String
  key         String? @unique

  recipeItems RecipeItem[]
}

model CalculationCard {
  id               Int      @id @default(autoincrement())
  cardId           String   @unique
  name             String
  unit             String
  category         String
  weight           String
  expirationPeriod String
  description      String
  portion          String
  createdAt        DateTime @default(now())

  recipe RecipeItem[]
}

model RecipeItem {
  id          Int    @id @default(autoincrement())
  name        String
  quantity    String
  coefficient String
  unit        String

  cardId    Int
  productId Int?

  card CalculationCard @relation(fields: [cardId], references: [id], onUpdate: Cascade, onDelete: Restrict)

  product Product? @relation(fields: [productId], references: [id], onUpdate: Cascade, onDelete: SetNull)
}
